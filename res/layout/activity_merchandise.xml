<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchandiseActivity" >
    
    <RelativeLayout 
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/title_bg"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/return1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/back_normal"
            android:gravity="center"
            android:text="返回" />

        <TextView
            android:id="@+id/merchandise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/return1"
            android:layout_alignBottom="@+id/return1"
            android:layout_marginLeft="31dp"
            android:layout_toRightOf="@+id/return1"
            android:gravity="center"
            android:text="linshi" />
	</RelativeLayout>
	
    <RelativeLayout 
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#737270"
        android:layout_below="@id/ll"
        >

        <RelativeLayout
            android:id="@+id/ry"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/tab_background" 
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:gravity="center"
                android:text="排序"
                android:textColor="#FCFCFC"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/ordertubiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/order"
                android:layout_alignParentRight="true"
                android:background="@drawable/chevron_down" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/ry"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_background"
            android:gravity="center_vertical"
            android:paddingLeft="50dp" >

            <TextView
                android:id="@+id/screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="筛选"
                android:textColor="#FCFCFC"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>
    
    <GridView 
        android:id="@+id/girdview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        />
</RelativeLayout>
