<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E0">
    
    
    <RelativeLayout 
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@drawable/title_bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    >
    
    <Button 
        android:id="@+id/cust_returns"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/product_details"
        android:text="返回"
        android:textSize="20dp"
        android:gravity="center"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="选择客服"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        />

</RelativeLayout>

    <TextView 
        android:id="@+id/jy"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="选择为您服务的客服专员..."
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@id/title"
        />
    

    <ListView 
        android:id="@+id/cust_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#DBDFEC"
        android:dividerHeight="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:layout_below="@id/jy"
        android:background="#ffffff"
        />
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:background="#737573"
    >

    <Button
        android:id="@+id/cust_red_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/red_btn"
        android:textColor="#ffffff"
        android:textSize="20dp" 
        android:text="下一步"/>

</RelativeLayout>

</RelativeLayout>
