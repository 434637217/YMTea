<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFE7"
    >

<RelativeLayout 
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@drawable/title_bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    >
    
    <Button 
        android:id="@+id/one_cust_returns"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/product_details"
        android:text="返回"
        android:textSize="20dp"
        android:gravity="center"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="订单提交"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
<TextView
    android:id="@+id/jy"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="您的订单已经提交"
    android:textColor="#000000"
    android:textSize="20dp"
    android:layout_below="@id/title" 
    android:gravity="center"
    android:layout_marginTop="20dp"
    />

<TextView
    android:id="@+id/jy2"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:textColor="#000000"
    android:text="请耐心等待，工作人员将尽快与您联系确认"
    android:textSize="15dp"
    android:layout_below="@id/jy" 
    android:gravity="center"
    />

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_below="@id/jy2"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/border" 
    >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="如果您有任何疑问，或需要其他服务，请联系您的客服专员"
        />
    
    <Button 
        android:id="@+id/call_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical ="true"
        android:background="@drawable/gray_btn"
        android:text="拨打电话"
        android:textColor="#ffffff"
        />
    
    <Button 
        android:id="@+id/call_cust"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical ="true"
        android:background="@drawable/gray_btn"
        android:text="查看订单"
        android:textColor="#ffffff"
        android:layout_below="@id/call_phone"
        android:layout_marginTop="20dp"
        />
    
</RelativeLayout>

</RelativeLayout>
