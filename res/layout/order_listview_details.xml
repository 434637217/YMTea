<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
    
    <RelativeLayout 
        android:background="@drawable/myfragment"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView 
            android:id="@+id/jy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/clock"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/jy"
            android:layout_marginTop="10dp"
            android:hint="XXXXXX"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            />
        
        <TextView 
            android:id="@+id/order_sl"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:hint="999"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            />
        
          <TextView 
            android:id="@+id/shul"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="数量:"
            android:textColor="#000000"
            android:textSize="20dp"
             android:layout_toLeftOf="@id/order_sl"
            />
        <TextView 
            android:id="@+id/fg"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            android:layout_marginTop="50dp"
            />
        <Gallery 
            android:id="@+id/order_gallery"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@id/fg"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:spacing="20px"
            />
        <TextView 
            android:id="@+id/order_name"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:hint="XXXXX"
            android:layout_toRightOf="@id/order_gallery"
            android:layout_below="@id/fg"
            android:layout_marginTop="40dp"
            android:textColor="#000000"
            android:singleLine="true"
        	android:ellipsize="end"
            />
        
         <TextView 
            android:id="@+id/fg2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            android:layout_marginTop="150dp"
            />
         <TextView 
             android:id="@+id/totalAmount"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:text="总价："
             android:textColor="#000000"
             android:layout_below="@id/fg2"
             android:layout_marginTop="10dp"
             android:gravity="center_vertical"
             android:textSize="20dp"
             />
         
         <TextView 
             android:id="@+id/order_moner"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:textColor="#CBA06D"
             android:textSize="20dp"
             android:layout_below="@id/fg2"
             android:layout_toRightOf="@id/totalAmount"
             android:hint="50000"
             android:layout_marginTop="10dp"
             android:gravity="center_vertical"
             />
         
         <TextView 
             android:id="@+id/bianhao"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:text="订单编号:"
             android:textColor="#000000"
             android:textSize="20dp"
             android:layout_below="@id/fg2"
             android:layout_marginTop="10dp"
             android:layout_toRightOf="@id/order_moner"
             android:gravity="center_vertical"
             android:layout_marginLeft="50dp"
             />
         
         <TextView 
             android:id="@+id/amount"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:hint="999"
             android:layout_below="@id/fg2"
             android:layout_toRightOf="@id/bianhao"
             android:gravity="center_vertical"
             android:layout_marginTop="10dp"
             android:textSize="20dp"
             android:textColor="#000000"
             />
    </RelativeLayout>

    
</RelativeLayout>
