<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
  >
  
      <RelativeLayout 
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@drawable/title_bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    >
    
    <Button 
        android:id="@+id/one_cust_returns"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/product_details"
        android:text="返回"
        android:textSize="20dp"
        android:gravity="center"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="客服详情"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        />
</RelativeLayout>

      <TextView 
          android:id="@+id/one_cust_name"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_below="@id/title"
          android:textSize="30dp"
          android:textColor="#C09040"
          android:gravity="center_vertical"
          android:hint="XXX"
          android:paddingLeft="20dp"
          />
      <TextView 
          android:id="@+id/fg1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#E8E8E8"
          android:layout_below="@id/one_cust_name"
          />
      <Gallery 
          android:id="@+id/one_cust_gallery"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_below="@id/fg1"
          />
       <TextView 
          android:id="@+id/fg2"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#E8E8E8"
          android:layout_below="@id/one_cust_gallery"
          />

       <RelativeLayout 
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="157dp"
           android:layout_below="@id/fg2"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:background="@drawable/myfragment" 
           >
           
           <RelativeLayout 
               android:id="@+id/jy1"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:gravity="center_vertical"
               >
               
               <TextView 
                   android:id="@+id/xjy"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:text="年龄:"
                   android:textSize="20dp"
                   android:paddingLeft="20dp"
                   android:gravity="center_vertical"
                   />
               <TextView 
                   android:id="@+id/age"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:hint="XXX"
                   android:textSize="20dp"
                   android:layout_centerHorizontal ="true"
                   android:gravity="center_vertical"
                   />
               
           </RelativeLayout>
               
       <TextView 
          android:id="@+id/fg3"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#E8E8E8"
          android:layout_below="@id/jy1"
          />
       <RelativeLayout android:id="@+id/jy2"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_below="@id/fg3"
           android:gravity="center_vertical">
           
             <TextView 
                   android:id="@+id/xjy"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:text="门店:"
                   android:textSize="20dp"
                   android:paddingLeft="20dp"
                   android:gravity="center_vertical"
                   />
               <TextView 
                   android:id="@+id/store"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:hint="XXX"
                   android:textSize="20dp"
                   android:layout_centerHorizontal ="true"
                   android:gravity="center_vertical"
                   />
           
           
           
       </RelativeLayout>
        <TextView 
          android:id="@+id/fg4"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#E8E8E8"
          android:layout_below="@id/jy2"
          />
        <RelativeLayout 
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/fg4"
            android:gravity="center_vertical"
            >
            
               <TextView 
                   android:id="@+id/xjy"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:text="手机:"
                   android:textSize="20dp"
                   android:paddingLeft="20dp"
                   android:gravity="center_vertical"
                   />
               <TextView 
                   android:id="@+id/phone_c"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:hint="XXX"
                   android:textSize="20dp"
                   android:layout_centerHorizontal ="true"
                   android:gravity="center_vertical"
                   />

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_alignParentRight="true"
                   android:layout_alignTop="@+id/phone_c"
                   android:layout_marginRight="13dp"
                   android:background="@drawable/chevron" />

        </RelativeLayout>
       
       
       
       
       </RelativeLayout>
       
</RelativeLayout>
